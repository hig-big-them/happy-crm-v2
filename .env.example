# Happy CRM Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ============================================
# CORE APPLICATION
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME="Happy CRM"

# ============================================
# SUPABASE (REQUIRED)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
NEXT_PUBLIC_SUPABASE_PROJECT_ID=your_project_id

# ============================================
# WHATSAPP CLOUD API (REQUIRED)
# ============================================
# Meta App Credentials
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
WHATSAPP_APP_SECRET=your_whatsapp_app_secret

# WhatsApp Business Account
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=generate_secure_random_token_here

# ============================================
# EMAIL CONFIGURATION (OPTIONAL)
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME="Happy CRM"

# ============================================
# SECURITY
# ============================================
# Generate a secure random string for session encryption
SESSION_SECRET=generate_secure_random_string_here
# Generate using: openssl rand -hex 32
JWT_SECRET=generate_secure_jwt_secret_here

# ============================================
# FACEBOOK / WHATSAPP EMBEDDED SIGNUP
# ============================================
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_FACEBOOK_CONFIG_ID=your_facebook_config_id
NEXT_PUBLIC_FACEBOOK_API_VERSION=v23.0
FACEBOOK_APP_SECRET=your_facebook_app_secret
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_here

# ============================================
# MONITORING (OPTIONAL)
# ============================================
SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token